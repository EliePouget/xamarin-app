<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP3_Fichier.MainPage"
             Title="Accueil"
             Background="linear-gradient(90deg, rgba(7,4,69,1) 17%, rgba(55,118,168,0.6761006289308176) 100%, rgba(3,209,251,0.6713836477987422) 100%);">

    <StackLayout Padding="20">
        
        <Label Text="Citations" Style="{StaticResource StyleLabel}" FontSize="50" HorizontalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
            <Label x:Name="lblNombreCitations" Text="??? " Style="{StaticResource StyleLabel}"/>
            <Label Text="citations" Style="{StaticResource StyleLabel}" />
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <Button x:Name="butAfficherCitations" BackgroundColor="Cornsilk" Text="Chargement des citations en cours..." Margin="20" IsEnabled="False"/>


            <Label Text="Application développée par moi, (c) 2019" Style="{StaticResource StyleLabel}"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
