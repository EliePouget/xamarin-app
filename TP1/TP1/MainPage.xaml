<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1.MainPage"
             Padding="18">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Appelez-moi" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Mon premier TP en Xamarin" FontSize="32" HorizontalTextAlignment="Center" Padding="30,10,30,10"/>
        <Label Text="Entrez un numéro de téléphone au format 0X.XX.XX.XX.XX" HorizontalTextAlignment="Center" FontSize="18" Padding="30,0,30,0"/>
        <Label Text="Appelles le 08 12 12 pour rencontrer les mecs les plus chauds de ta région" HorizontalTextAlignment="Center" TextColor="Red"/>
        <Entry x:Name="entNuméro" Placeholder="01.01.01.01.01" VerticalTextAlignment="Start" TextChanged="entNuméro_TextChanged"/>
        <Button Text="Appelez-moi !" x:Name="butAppeler" TextColor="White" CornerRadius="10" BackgroundColor="#2196F3" IsEnabled="False"/>
    </StackLayout>

</ContentPage>
