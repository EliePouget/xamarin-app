<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1.MainPage"
             Padding="18">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Appelez-moi" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Mon premier TP en Xamarin" FontSize="32" HorizontalTextAlignment="Center" Padding="30,10,30,10"/>
        <Label Text="Entrez un numéro de téléphone au format 0X.XX.XX.XX.XX" HorizontalTextAlignment="Center" FontSize="18" Padding="30,0,30,0"/>
        <Entry HorizontalTextAlignment="Start" Placeholder="01.01.01.01.01" VerticalTextAlignment="Start"/>
        <Button Text="Appelez-moi!" BackgroundColor="#2196F3" TextColor="White" CornerRadius="10"></Button>
    </StackLayout>

</ContentPage>
